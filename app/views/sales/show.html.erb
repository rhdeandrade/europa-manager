<%- model_class = Sale -%>
<div class="page-header">
  <h1>Venda</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Data da venda:</strong></dt>
  <dd><%= @sale.sold_on %></dd>
  <dt><strong>Última Troca:</strong></dt>
  <dd><%= @sale.last_change_on %></dd>
  <dt><strong>Troca de Câmara:</strong></dt>
  <dd><%= @sale.change_chamber ? "Sim" : "Não" %></dd>
  <dt><strong>Preço:</strong></dt>
  <dd><%= @sale.price %></dd>
  <dt><strong>Valor para comissão:</strong></dt>
  <dd><%= @sale.price_commission %></dd>
  <dt><strong>Porcenagem (%):</strong></dt>
  <dd><%= @sale.percentage %></dd>
  <dt><strong>Plano:</strong></dt>
  <dd><%= @sale.plan %></dd>
  <dt><strong>Cliente:</strong></dt>
  <dd><%= @sale.customer.name unless @sale.customer == nil %></dd>
  <dt><strong>Produto:</strong></dt>
  <dd><%= @sale.product.name unless @sale.product == nil %></dd>
  <dt><strong>Funcionário:</strong></dt>
  <dd><%= @sale.employee.name unless @sale.employee == nil %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Voltar",
              sales_path, :class => 'btn'  %>
  <%= link_to "Editar",
              edit_sale_path(@sale), :class => 'btn' %>
  <%= link_to "Deletar",
              sale_path(@sale),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
