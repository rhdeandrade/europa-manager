<%- model_class = Employee -%>
<div class="page-header">
  <h1>Funcionários</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>CPF</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.name, employee_path(employee) %></td>
        <td><%= employee.name %></td>
        <td><%= employee.cpf %></td>
        <td>
          <%= link_to "Editar",
                      edit_employee_path(employee), :class => 'btn btn-medium' %>
          <%= link_to "Apagar",
                      employee_path(employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-medium btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo Funcionário",
            new_employee_path,
            :class => 'btn btn-primary' %>
