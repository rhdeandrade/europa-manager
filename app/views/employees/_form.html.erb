<%= simple_form_for @employee, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, :label => "Nome" %>
  <%= f.input :cpf %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary', :value => "Salvar" %>
    <%= link_to "Cancelar",
                employees_path, :class => 'btn' %>
  </div>
<% end %>
