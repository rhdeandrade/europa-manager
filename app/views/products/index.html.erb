<%- model_class = Product -%>
<div class="page-header">
  <h1>Produtos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Validade</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.validity %></td>
        <td>
          <%= link_to "Editar",
                      edit_product_path(product), :class => 'btn btn-medium' %>
          <%= link_to "Apagar",
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem Certeza?')) },
                      :class => 'btn btn-medium btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo Produto",
            new_product_path,
            :class => 'btn btn-primary' %>
