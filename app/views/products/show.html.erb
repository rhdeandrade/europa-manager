<%- model_class = Product -%>
<div class="page-header">
  <h1>Produto</h1>
</div>

<dl class="dl-horizontal">

  <dt><strong>Nome:</strong></dt>
  <dd><%= @product.name %></dd>
  <dt><strong>Validade:</strong></dt>
  <dd><%= @product.validity %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Voltar",
              products_path, :class => 'btn'  %>
  <%= link_to "Editar",
              edit_product_path(@product), :class => 'btn' %>
  <%= link_to "Apagar",
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem Certeza?')) },
              :class => 'btn btn-danger' %>
</div>
